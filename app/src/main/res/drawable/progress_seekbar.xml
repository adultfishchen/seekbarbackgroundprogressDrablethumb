<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="10dp"/>
    <gradient
        android:angle="-90"
        android:centerColor="#9955FF"
        android:centerY="0.5"
        android:endColor="#99FF33"
        android:startColor="#CCFF99"/>
        <stroke
            android:width="1dp"
            android:color="#FFFF77"/>
    </shape>
</item>

    <item android:id="@+id/progrss">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <gradient
                    android:angle="-90"
                    android:centerColor="#FFCCCC"
                    android:endColor="#FF0088"
                    android:startColor="#FF0000"/>
                <stroke
                    android:width="1dp"
                    android:color="#FFFF77"/>

            </shape>
        </clip>
    </item>
</layer-list>